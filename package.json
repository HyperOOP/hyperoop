{
  "name": "hyperoop",
  "version": "0.5.1",
  "description": "OOP-style web micro-framework over hyperapp",
  "repository": {
    "type": "git",
    "url": "https://github.com/algebraic-brain/hyperoop"
  },
  "homepage": "https://hyperoop.github.io",
  "license": "MIT",
  "keywords": [
    "hyperapp",
    "hyperoop",
    "frontend",
    "web",
    "SPA",
    "single page application",
    "framework",
    "virtual dom"
  ],
  "main": "dist/hyperoop.umd.js",
  "module": "dist/hyperoop.es.js",
  "typings": "dist/hyperoop.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "docs:md": "typedoc --theme markdown  --options ./typedocconfig.js",
    "docs:html": "typedoc --options ./typedocconfig.js",
    "docs:json": "typedoc --json ./docs/docs.json ./src",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build:es": "rollup -c -i src/hyperoop.ts -o dist/hyperoop.es.js -m -f es -n hyperoop",
    "build:umd": "rollup -c -i src/hyperoop.ts -o dist/hyperoop.umd.js -m -f umd -n hyperoop",
    "build:min": "rollup -c rollup.config.minify.js -i src/hyperoop.ts -o dist/hyperoop.min.js -m -f umd -n hyperoop",
    "build": "npm run clean:dist && npm run build:es && npm run build:umd && npm run build:min",
    "test:jest": "tsc -p tsconfig.test.json && jest --coverage --env=jsdom",
    "test": "npm run test:jest && npm run test:ts",
    "test:one": "tsc -p tsconfig.test.json && jest --env=jsdom -t ",
    "test:ts": "tsc -p test/ts",
    "clean:dist": "rimraf ./dist",
    "clean:all": "rimraf ./dist ./node_modules ./docs ./coverage ./.rpt2_cache"
  },
  "author": "Osman Bineev",
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0",
    "redoundo": "^0.1.11",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-gzip": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "rollup-plugin-uglify": "^6.0.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.18",
    "typescript": "^3.0.1"
  },
  "babel": {
    "presets": "env",
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "ui.h"
        }
      ]
    ]
  }
}
